@model Greengrocer.Models.Food
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <form action="/Home/Update?FoodId=@Model.FoodId" method="post">
            <div class="row">
                <div class="col-lg-12">
                    <input placeholder="Food Name" value="@Model.FoodName" required type="text" id="FoodName" name="FoodName" class="form-control" />
                </div>
            </div>
            <br />
           
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <select required class="form-control" name="TypeOfFood" id="TypeOfFood">
                        @if (Model.TypeOfFood.Equals("Fruit"))
                        {
                            <option selected value="Fruit">
                                Fruit
                            </option>
                            <option value="Vegetable">
                                Vegetable
                            </option>
                        }
                        else
                        {
                    <option value="Fruit">
                        Fruit
                    </option>
                            <option selected value="Vegetable">
                                Vegetable
                            </option>
                        }
                    </select>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <input placeholder="Price" value="@Model.Price" required type="number" id="Price" name="Price" class="form-control" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <button type="submit" class="btn btn-warning btn-block">Update</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
